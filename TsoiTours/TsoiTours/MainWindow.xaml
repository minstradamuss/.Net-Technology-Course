<Window x:Class="TsoiTourApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TsoiTourApp"
        mc:Ignorable="d"
        FontFamily="Comic Sans MS"
        FontSize="16"
        Title="КИНО" Height="500" Width="1000">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="179*"/>
            <ColumnDefinition Width="661*"/>
        </Grid.ColumnDefinitions>

        <ListBox Name="КИНО" Background="Lavender" Margin="0,0,460,0" Grid.ColumnSpan="2">
            <ListBoxItem Margin="5">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="1982" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">

                        <Image Source="Images/1982/4.jpg" Width="60" Margin="0,0,10,0"/>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                            <Button Name="first1982" BorderThickness="0" Width="63" Height="50" Click="ShowBigImg" Margin="0,10,5,0">
                                <Image Source="Images/1982/1.jpg"/>
                            </Button>
                            <Button Name="second1982" BorderThickness="0" Width="63" Height="50" Click="ShowBigImg" Margin="0,10,5,0">
                                <Image Source="Images/1982/2.jpg"/>
                            </Button>
                            <Button Name="third1982" BorderThickness="0" Width="63" Height="50" Click="ShowBigImg" Margin="0,10,0,0">
                                <Image Source="Images/1982/3.jpg"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ListBoxItem>

            <ListBoxItem Margin="5">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="1983" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">

                        <Image Source="Images/1983/4.jpg" Width="60" Margin="0,0,10,0"/>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                            <Button Name="first1983" BorderThickness="0" Width="63" Height="50" Click="ShowBigImg" Margin="0,10,5,0">
                                <Image Source="Images/1983/1.jpg"/>
                            </Button>
                            <Button Name="second1983" BorderThickness="0" Width="63" Height="50" Click="ShowBigImg" Margin="0,10,5,0">
                                <Image Source="Images/1983/2.jpg"/>
                            </Button>
                            <Button Name="third1983" BorderThickness="0" Width="63" Height="50" Click="ShowBigImg" Margin="0,10,0,0">
                                <Image Source="Images/1983/3.jpg"/>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ListBoxItem>
        </ListBox>


        <Image Name="outputImage" Grid.Column="1" Margin="449,18,127,135" />

        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="376,320,51,40">
            <TextBlock TextAlignment="Center" Name="outputText" TextWrapping="Wrap" FontSize="16"/>
        </ScrollViewer>



    </Grid>
</Window>

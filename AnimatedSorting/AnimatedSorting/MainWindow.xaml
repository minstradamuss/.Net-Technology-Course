<Window x:Class="AnimatedSorting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Animated Sorting" Height="450" Width="800">
    <Grid>
        <Canvas Name="canvas" Background="White" Margin="10" />
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Name="LoadButton" Content="Загрузить из файла" Click="LoadButton_Click" Margin="5"/>
            <Button Name="SortButton" Content="Сортировать" Click="SortButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
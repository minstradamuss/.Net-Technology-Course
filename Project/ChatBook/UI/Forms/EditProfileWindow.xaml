<Window x:Class="ChatBook.UI.Windows.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Profile" Height="350" Width="400">
    <Grid Background="OldLace" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Image x:Name="imgAvatar" Width="100" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="Uniform" Margin="0,0,0,10" />
        <Button x:Name="btnUploadAvatar" Content="Upload Avatar" Width="120" Height="30" Margin="120,35,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btnUploadAvatar_Click" />

        <Label Content="First Name:" Grid.Row="1" VerticalAlignment="Center" />
        <TextBox x:Name="txtFirstName" Grid.Row="1" Margin="100,0,0,0" Height="25" />

        <Label Content="Last Name:" Grid.Row="2" VerticalAlignment="Center" />
        <TextBox x:Name="txtLastName" Grid.Row="2" Margin="100,0,0,0" Height="25" />

        <Label Content="Phone Number:" Grid.Row="3" VerticalAlignment="Center" />
        <TextBox x:Name="txtPhoneNumber" Grid.Row="3" Margin="100,0,0,0" Height="25" />

        <Button x:Name="btnSave" Content="Save" Grid.Row="4" Width="320" Height="30" Background="Moccasin" Click="btnSave_Click" />
    </Grid>
</Window>
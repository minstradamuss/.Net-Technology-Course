<Window x:Class="ChatBook.UI.Windows.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book Details" Height="500" Width="400"
        WindowStartupLocation="CenterScreen">
    <DockPanel Margin="10">
        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Bottom"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button x:Name="btnUploadCover" Content="Upload Cover" Width="100" Margin="5"/>
            <Button x:Name="btnSave" Content="Save" Width="100" Margin="5"/>
            <Button x:Name="btnDelete" Content="Delete" Width="100" Margin="5"/>
        </StackPanel>

        <!-- Input Fields -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <Label Content="Title"/>
                <TextBox x:Name="txtTitle"
                         Text="Book Title"
                         Foreground="Gray"
                         GotFocus="RemoveText"
                         LostFocus="AddText"
                         Margin="0,0,0,5"/>

                <Label Content="Author"/>
                <TextBox x:Name="txtAuthor"
                         Text="Author"
                         Foreground="Gray"
                         GotFocus="RemoveAuthorPlaceholder"
                         LostFocus="AddAuthorPlaceholder"
                         Margin="0,0,0,5"/>

                <Label Content="Status"/>
                <ComboBox x:Name="cmbStatus" Margin="0,0,0,5">
                    <ComboBoxItem Content="Reading"/>
                    <ComboBoxItem Content="Read"/>
                    <ComboBoxItem Content="Planned"/>
                </ComboBox>

                <!-- Rating Before Review -->
                <Label Content="Rating"/>
                <StackPanel x:Name="StarsPanel" Orientation="Horizontal" Margin="0,0,0,5"/>

                <Label Content="Review"/>
                <TextBox x:Name="txtReview"
                         AcceptsReturn="True"
                         Height="100"
                         TextWrapping="Wrap"
                         Margin="0,0,0,5"
                         VerticalScrollBarVisibility="Auto"/>

                <Label Content="Cover Image"/>
                <Image x:Name="imgCover"
                       Height="150"
                       Stretch="Uniform"
                       Margin="0,5"/>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>

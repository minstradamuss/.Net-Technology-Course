<Window x:Class="ChatBook.Views.Windows.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Информация о книге"
        Height="500"
        Width="404"
        Background="Linen"
        WindowStartupLocation="CenterScreen">
    <DockPanel Margin="10">
        <!-- Buttons -->
        <StackPanel Orientation="Horizontal"
                    DockPanel.Dock="Bottom"
                    Margin="0,10,0,0"
                    HorizontalAlignment="Right">
            <Button Content="Загрузить обложку"
                    Width="116"
                    Margin="5"
                    Background="#FFE0C0"
                    Command="{Binding UploadCoverCommand}" />
            <Button Content="Сохранить"
                    Width="100"
                    Margin="5"
                    Background="#FFE0C0"
                    Command="{Binding SaveCommand}" />
            <Button Content="Удалить"
                    Width="100"
                    Margin="5"
                    Background="#FFE0C0"
                    Command="{Binding DeleteCommand}" />
        </StackPanel>

        <!-- Input Fields -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <Label Content="Название книги"/>
                <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                         Foreground="Black"
                         Margin="0,0,0,5"/>

                <Label Content="Автор"/>
                <TextBox Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}"
                         Foreground="Black"
                         Margin="0,0,0,5"/>

                <Label Content="Статус"/>
                <ComboBox SelectedItem="{Binding Status}"
                          Margin="0,0,0,5">
                    <ComboBoxItem Content="Читаю"/>
                    <ComboBoxItem Content="Прочитано"/>
                    <ComboBoxItem Content="Планирую"/>
                </ComboBox>

                <Label Content="Оценка"/>
                <StackPanel x:Name="StarsPanel"
                            Orientation="Horizontal"
                            Margin="0,0,0,5"/>

                <Label Content="Отзыв"/>
                <TextBox Text="{Binding Review, UpdateSourceTrigger=PropertyChanged}"
                         AcceptsReturn="True"
                         Height="100"
                         TextWrapping="Wrap"
                         Margin="0,0,0,5"
                         VerticalScrollBarVisibility="Auto"/>

                <Label Content="Обложка"/>
                <Image Source="{Binding CoverImage}"
                       Height="150"
                       Stretch="Uniform"
                       Margin="0,5"/>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
